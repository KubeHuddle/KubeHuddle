---
type MenuLink = {
  name: string;
  href: string;
  isExternal?: boolean;
};

const menuItems: MenuLink[] = [
  { name: "Home", href: "#" },
  { name: "Coming Soon", href: "#coming-soon" },
  { name: "Conferences", href: "#conferences" },
  { name: "Contact", href: "#contact" },
  { name: "Code of Conduct", href: "/code-of-conduct", isExternal: true },
  {
    name: "GitHub",
    href: "https://github.com/KubeHuddle/KubeHuddle",
    isExternal: true,
  },
];
---

<nav
  class="bg-white/80 border-gray-200 dark:bg-gray-900 fixed top-0 left-0 right-0"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="favicon.svg" class="h-8 w-8" alt="KubeHuddle Logo" />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >KubeHuddle</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100/80 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700/80 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50/80 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white/80 dark:bg-gray-800/80 md:dark:bg-gray-900/80 dark:border-gray-700"
      >
        {
          menuItems.map((item) => (
            <li>
              <a
                target={item.isExternal ? "_blank" : "_self"}
                href={item.href}
                class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100/80 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700/80 dark:hover:text-white md:dark:hover:bg-transparent"
                aria-current="page"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
