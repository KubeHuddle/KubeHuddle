---
import MainLayout from "../../layouts/MainLayout.astro";
import Speaker from "../../components/Speaker/Speaker.astro";
import Agenda from "../../components/Agenda/Agenda.astro";

import { agenda, speakers } from "../../../data/combined.json";

const content = {
  title: "2022",
  description: "The 2022 (Edinburgh) Edition of KubeHuddle, October 3rd-4th",
  date: "October 3rd and 4th, 2022",
  location: "Edinburgh International Conference Centre, Edinburgh, Scotland",
  sponsors: {
    malt: [
      {
        name: "Lloyds Banking Group",
        logo: "lbg.png",
        href: "https://www.lloydsbankinggroup.com/",
      },
      {
        name: "ControlPlane",
        logo: "control-plane.png",
        href: "https://controlplane.io",
      },
    ],
    grain: [
      { name: "Solo.io", logo: "solo-io.png", href: "https://solo.io" },
      {
        name: "Teleport",
        logo: "teleport.png",
        href: "https://goteleport.com/",
      },
      { name: "Loft", logo: "loft.png", href: "https://loft.sh/" },
    ],
    blend: [
      {
        name: "Giant Swarm",
        logo: "giant-swarm.png",
        href: "https://giantswarm.io",
      },
      {
        name: "Civo",
